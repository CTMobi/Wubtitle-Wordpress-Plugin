{
    "name": "ctmobi/wubtitle",
    "type": "project",
    "authors": [
        {
            "name": "Alessio Catania",
            "email": "alessio.catania@ctmobi.it"
        }
    ],
    "autoload": {
        "psr-4": {"Wubtitle\\": "./includes"}
    },
    "scripts": {
        "analyze": "./vendor/bin/phpstan analyze",
        "phpcs": "phpcs ./",
        "fixphp": "phpcbf",
        "phpmd": "phpmd ./ ansi ./phpmd.xml",
        "test": "./vendor/bin/phpunit --log-junit 'reports/unitreport.xml' --coverage-clover 'reports/clover.xml' --color=always --testdox",
        "check-php": ["@phpmd","@phpcs","@analyze"]
    },
    "require": {
        "firebase/php-jwt": "^5.2"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "*",
        "phpmd/phpmd": "@stable",
        "phpunit/phpunit": "^7",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.6.2",
        "wp-coding-standards/wpcs": "*",
        "phpcompatibility/phpcompatibility-wp": "*",
        "szepeviktor/phpstan-wordpress": "^0.6.0"
    }
}
